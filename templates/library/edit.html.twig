{% extends 'base.html.twig' %}

{% block title %}Redigera bok{% endblock %}

{% block body %}
<h1>Här kan du redigera bokens detaljer</h1>

<form method="post">
    <label>Titel:<br>
        <input type="text" name="title" value="{{ book.getTitle() }}" required>
    </label><br><br>

    <label>ISBN:<br>
        <input type="text" name="isbn" value="{{ book.getIsbn() }}" required>
    </label><br><br>

    <label>Författare:<br>
        <input type="text" name="author" value="{{ book.getAuthor() }}" required>
    </label><br><br>

    <label>Bild URL:<br>
        <input type="text" name="image" value="{{ book.getImage() }}">
    </label><br><br>

    <button type="submit">Spara dina ändringar</button>
</form>

<p><a href="{{ path('library_show_one', { id: book.getId() }) }}"><button>Avbryt redgirering</button></a></p>
{% endblock %}
